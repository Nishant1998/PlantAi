<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlantD">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/plantDicPic"
                android:layout_width="match_parent"
                android:layout_height="202dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/plantDicName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/plantDicPic"
                android:layout_marginTop="3dp"
                android:text=""
                android:textSize="22sp"
                android:layout_margin="12sp"/>

            <TextView
                android:id="@+id/plantDicContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/plantDicName"
                android:layout_marginTop="3dp"
                android:text=""
                android:textSize="18sp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"/>



        </LinearLayout>

    </ScrollView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_fill2"
            android:src="@drawable/ic_photo_camera_black_24dp"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:onClick="startCamera"/>

    </RelativeLayout>



</RelativeLayout>