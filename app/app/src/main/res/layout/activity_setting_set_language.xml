<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingSetLanguage"
    android:background="@color/colorGray">

    <TextView
        android:id="@+id/sYL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/design_1"
        android:text="@string/sele_lan_0"
        android:textSize="22sp"
        android:textAlignment="center"
        android:layout_margin="12dp"
        android:layout_marginBottom="12dp"
        android:padding="8dp"

        />


    <RadioGroup
        android:id="@+id/lang_grp"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@+id/sYL"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="133dp">

        <RadioButton
            android:id="@+id/rodio_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/design_1"
            android:checked="true"
            android:onClick="radioClick"
            android:text="@string/english"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rodio_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/design_1"
            android:onClick="radioClick"
            android:text="@string/hindi"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rodio_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/design_1"
            android:onClick="radioClick"
            android:text="@string/marathi"
            android:textSize="18sp" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:id="@+id/rl2"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:padding="12dp">


        <Button
            android:id="@+id/CancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_fill3"
            android:onClick="cancelClick"
            android:text="@string/cancel_0"
            android:textColor="@color/colorPrimary"
            android:layout_marginEnd="6dp"
            android:textSize="22sp" />
        <Button
            android:id="@+id/SaveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_fill"
            android:onClick="saveClick"
            android:text="@string/save_0"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />

    </LinearLayout>

</RelativeLayout>