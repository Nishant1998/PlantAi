<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectLanguage"
    android:id="@+id/mainLayout"
    android:background="@color/colorGray">


    <TextView
        android:id="@+id/sYL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/design_1"
        android:text="@string/sele_lan_0"
        android:textSize="22sp"
        android:textAlignment="center"
        android:layout_margin="12dp"
        android:layout_marginBottom="12dp"
        android:padding="8dp"
        />

    <ImageView
        android:layout_width="87dp"
        android:layout_height="22dp"
        android:layout_above="@+id/rl2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        android:layout_marginStart="162dp"
        android:layout_marginLeft="147dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="1dp"
        android:src="@drawable/grp1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:id="@+id/rl2"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:padding="12dp">


        <Button
            android:id="@+id/nextBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:background="@drawable/button_fill"
            android:onClick="nextClick"
            android:text="Next"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />

    </RelativeLayout>

    <RadioGroup
        android:id="@+id/lang_grp"
        android:layout_width="match_parent"
        android:layout_height="246dp"
        android:layout_below="@+id/sYL"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="416dp">

        <RadioButton
            android:id="@+id/rodio_e"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/design_1"
            android:checked="true"
            android:onClick="radioClick"
            android:text="@string/english"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rodio_h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/design_1"
            android:onClick="radioClick"
            android:text="@string/hindi"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rodio_m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/design_1"
            android:onClick="radioClick"
            android:text="@string/marathi"
            android:textSize="18sp" />

    </RadioGroup>


</RelativeLayout>